<!-- views/book/create.ejs -->

<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include('../templates/head') %>

    <link rel="stylesheet" href="/css/book/create.css">
    <script type="module" src="/js/book/create.js" defer></script>

    <title>도서 대여 프로그램</title>
</head>

<body>
    <%- include('../templates/b-header') %>

    <section id="create-form">
      <h1>도서 추가</h1>

      <article id="create-input">
        <label for="title">제목</label>
        <input type="text" class="input" placeholder="필수 입력" id="title" name="title">
        <label for="discription">설명</label>
        <textarea type="text" class="input" id="discription" name="discription"></textarea>
        <label for="author">저자</label>
        <input type="text" class="input" id="author" name="author">
        <label for="price">가격</label>
        <input type="text" class="input" id="price" name="price">
      </article>

      <article id="btns">
        <button id="create-btn">추가</button>
      </article>
    </section>
</body>

</html>