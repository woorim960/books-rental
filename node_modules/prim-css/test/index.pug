doctype html
html(lang='en')
  
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
      
    title PRIM
    
    link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:300,900')
    link(rel='stylesheet' type='text/css' href='./dist/prim.css')
    
    
  body
    .container
        
      header.row.mt-5.mb-3.py-5
        .col-12
          .l-16.w-bold PRIM
          .l-24 TEST ENVIRONMENT
          
          
      .row.spacing-2.py-4
        
        mixin item(link)
          a.col-6.col-sm-4.col-md-3.p-3.bg-dark.c-white(href=link + '.html')
            .l-07.w-bold TEST
            .l-10.truncate
              block
                  
        +item('layout') Layout columns
        +item('grid') Grid spacing
        +item('colors') Table of colors
        +item('components') Standard components
