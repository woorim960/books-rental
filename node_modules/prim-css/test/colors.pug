extends ../src/defaults/page.pug

block body
  
  .container.px-2.spacing-3
    
    header.row.full-row
      .col-12
        .l-10.w-bold PRIM
        .l-14 TABLE OF COLORS
    
        
        
    section.row.full-row.spacing-1.spacing-sm-3
    
      //-------------------------
      //-:::: Basic colors   ::::
      //-------------------------
      each color in ['red', 'orange', 'yellow', 'lime', 'green', 'turquoise', 'blue', 'sapphire', 'purple', 'fuchsia']
        - classe = `bg-${color}`
        
        .col-6.col-sm-3.col-md-2: .spacing-1
          
          .col-12.ratio-wide.fill-height(class=classe): .p-3
            .l-14.l-sm-12.w-bold.truncate
              = color.toUpperCase()
              
          each _, i in Array(4)
            - classe = `bg-${color}-l${i + 1}`
            
            .col-3.ratio-square(class=classe)
            
            
          each _, i in Array(4)
            - classe = `bg-${color}-d${i + 1}`
            
            .col-3.ratio-square(class=classe)
          
              
      //-----------------------------
      //-:::: Full tone colors   ::::
      //-----------------------------
      each color in ['gray', 'bluegray']
        - classe = `bg-${color}`
        
        .col-6.col-sm-3.col-md-2: .spacing-1
          .col-12.ratio-wide(class=classe): .p-3
            
            .l-14.l-sm-12.w-bold.truncate
              = color.toUpperCase()
            
          each _, i in Array(6)
            - classe = `bg-${color}-l${i + 1}`
            
            .col-2.ratio-square(class=classe)
            
            
          each _, i in Array(12)
            - classe = `bg-${color}-d${i + 1}`
            
            .col-2.ratio-square(class=classe)
            
            
      //----------------------------
      //-::::  Standard colors  ::::
      //----------------------------
      each color in ['black', 'dark', 'light', 'white', 'primary', 'secondary', 'palette-1', 'palette-2', 'palette-3', 'palette-4', 'palette-5', 'palette-6']
        - classes = [`bg-${color}`]
        
        if color === 'dark' || color === 'black'
          - classes.push('c-white')
        
        .col-6.col-sm-3.col-md-2.ratio-wide(class=classes.join(' ')): .p-3
            
          .l-14.l-sm-12.w-bold.truncate
            = color.toUpperCase()
